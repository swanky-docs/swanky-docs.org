.masthead
  height 300px
  width 100%
  background $grey-lightest
  text-align center

  @media screen and (min-width: $screen-is-bigger-than-mobile)
    min-height 350px

  @media screen and (min-width: $screen-is-bigger-than-tablet)
    height 400px

  @media screen and (min-width: $screen-is-bigger-than-lg-desktop)
    height 650px

  .btn-default
    z-index: 5
    position: relative

  .intro
    font-size 2rem
    display block
    max-width 540px
    padding 70px 25px 25px
    margin 0 auto
    position: relative
    z-index: 5

    @media screen and (min-width: $screen-is-bigger-than-tablet)
      font-size 2.4rem
      padding 60px 40px 40px

    @media screen and (min-width: $screen-is-bigger-than-lg-desktop)
      padding 80px 40px 40px
