// Quick button reset
button
  text-shadow none
  font-weight 600
  border none

.btn-primary
  text-decoration none
  display inline-block
  text-align center
  font-size 1.4rem
  color #fff
  background $brand-primary
  border-radius 18px
  border 1px solid darken($brand-primary, 5%)
  height 36px
  line-height 34px
  box-sizing border-box
  padding 0 4rem
  font-weight 600

  &:visited
    color #fff
    background $brand-primary

  &:hover
    text-decoration none
    cursor pointer
    color #fff

  &:focus, &:active
    text-decoration none
    color #fff
    box-shadow inset 0 0 3px 2px rgba(0,0,0,.07)
    outline 0

.btn-default
  text-decoration none
  display inline-block
  text-align center
  font-size 1.4rem
  color $black
  background #fff
  border-radius 18px
  border 1px solid #eee
  height 36px
  line-height 34px
  box-sizing border-box
  padding 0 4rem
  font-weight 600

  &:visited
    color $black
    background #fff

  &:hover
    text-decoration none
    color $black
    cursor pointer

  &:focus, &:active
    text-decoration none
    box-shadow inset 0 0 3px 2px rgba(0,0,0,.07)
    color $black
    outline 0

.btn-center
  text-align center
  margin 20px 0

  @media screen and (min-width: $screen-is-bigger-than-tablet)
    margin 40px 0
